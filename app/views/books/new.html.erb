<div style="text-align: center;">
<h1> Add new Books </h1>
<%= form_for @book do |f| %>
<p><label>title:</label>
<%= f.text_field :title %>
</p>
<p><label>price:</label>
<%= f.text_field :price %>
</p>
<p><label>subject:</label>
<%= collection_select(:book,:subjects_id,Subject.all,:id,:name,prompt: "---Select subject---") %> 
</p>
<p><label>description:</label>
<%= f.text_area :description %>
</p>
<%= f.submit :createbook %>
   
<% end %>
</div>
