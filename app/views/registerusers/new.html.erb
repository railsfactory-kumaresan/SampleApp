<div style="text-align: center;">
	<h1> New user </h1>
	<% if @registeruser.errors.any? %>
	<ul class="Signup_Errors">
		<% for mesg in @registeruser.errors.full_messages %>
		<li> *<%= mesg %> </li>
		<% end %>
	</ul>
	<% end %>
	<%= form_for(:registeruser, :url => {:controller => 'registerusers', :action => 'create'}) do |f| %>
	<p> name:- <%= f.text_field :name  %> </p>
	<p> email:- <%= f.text_field :email %> </p>
	<div class="btn-submit" style="padding-left: 40px;">
	<%= f.submit :CreateUser %> </div>
	<% end %>
</div>